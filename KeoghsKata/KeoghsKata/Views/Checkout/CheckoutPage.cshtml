@model List<KeoghsKata.Models.StoreKeepingUnit>

@{
    ViewData["Title"] = "CheckoutPage";
}

<h1>CheckoutPage</h1>

<div>
    <h4>Products</h4>
    <hr />


    @foreach (var sku in Model)
    {
        <div class="col-md-6 col-lg-4 col-xl-3 pb-3">
                <div class="part-1">
                    <h3>Product @sku.ProductName</h3>

                    <div class="row">
                        <button type="button" class="btn btn-success">Add to cart</button>
                        <button type="button" class="btn btn-danger">Remove from cart</button>

                    </div>
                </div>
                <div>
                    <h4>£@sku.UnitPrice</h4>
                </div>
        </div>
    }
